@{
    ViewData["Title"] = "Change Password";
    var cusName = Context.Session.GetString(Constants._cusName);
    var error = ViewData["error"] as string;
}
@model ChangePassView

<div id="content">
    <div id="content-left">
        <h3 style="font-weight: normal;">Welcome, @cusName</h3>
        <h3>Account Management</h3>
        <ul>
            <a asp-action="Info" asp-controller="Customer">
            <li>Personal information</li></a>
        </ul>
        <h3>My order</h3>
        <ul>
            <a asp-action="Order" asp-controller="Customer">
            <li>All orders</li></a>
            <a asp-action="OrderCanceled" asp-controller="Customer">
            <li>Canceled order</li></a>
        </ul>
    </div>
    <div id="content-right">
        <div id="form">
            <div id="form-content">
                <form asp-action="ChangeAccountPassword" asp-controller="Permission">
                    <label>Old password<span style="color: red;">*</span></label><br />
                    <input type="password" asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>

                    <label>New password<span style="color: red;">*</span></label><br />
                    <input type="password" asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>

                    <label>Confirm new password<span style="color: red;">*</span></label><br />
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    <div></div>
                    <input type="submit" value="Change Password" style="margin-bottom: 30px;" />
                    @if (error != null)
                    {
                        <div><span style="color: red;">@error</span></div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
